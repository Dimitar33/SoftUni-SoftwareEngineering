@model AllPetsQueryModel


    <form method="get">
        <div class="row">
            <div class="form-group col-3">
                <label asp-for="Purpose"></label>
                <select asp-for="Purpose" class="form-control">
                    <option value="">All</option>
                    <option value="1">Breeding</option>
                    <option value="2">Adoption</option>
                    <option value="3">Sell</option>
                </select>
            </div>
            <div class="form-group col-3">
                <label asp-for="Breed"></label>
                <select asp-for="Breed" class="form-control">
                    <option value=""> All </option>
                    @foreach (var breed in Model.Breeds)
                    {

                        <option value="@breed.Breed">@breed.Breed</option>

                    }
                </select>
            </div>
            <div class="form-group col-3">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-control">
                    <option value=""> All </option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group col-3">
                <label asp-for="Sorting">Sort by</label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0">Recent</option>
                    <option value="1">Age</option>
                    <option value="2">Price</option>
                </select>
            </div>
            <div class="form-group col-3">
                <label asp-for="SearchTerm">Search</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Search" />
            </div>
        </div>       
    </form>

@{ 
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 0)
    {
        previousPage = 0;
    }
    var maxPage = Math.Ceiling((double)Model.AllDogsCount / AllPetsQueryModel.PetsPerPage);
}

    <div class="row">
        <div class="col">
            <a class="btn btn-primary
               @(Model.CurrentPage <= 1 ? "disabled" : string.Empty)"
               asp-controller="Dogs"
               asp-action="AllDogs"
               asp-route-currentPage="@previousPage"
               asp-route-purpose="@Model.Purpose"
               asp-route-breed="@Model.Breed"
               asp-route-gender="@Model.Gender"
               asp-route-sorting="@Model.Sorting"
               asp-route-searchTerm="@Model.SearchTerm"
               >back</a>
        </div>
        <div class="col">
            <a class="btn btn-primary float-right
               @(Model.CurrentPage >= maxPage ? "disabled" : string.Empty)"
               asp-controller="Dogs"
               asp-action="AllDogs"
               asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-route-purpose="@Model.Purpose"
               asp-route-breed="@Model.Breed"
               asp-route-gender="@Model.Gender"
               asp-route-sorting="@Model.Sorting"
               asp-route-searchTerm="@Model.SearchTerm"
               >next</a>
        </div>
    </div>

<div class="row">
    @foreach (var pet in Model.AllPets)
    {
    <div class="col-2">
        <div class="card mb-2">
            <img src="@pet.Picture" alt="@pet.Breed @pet.Gender @pet.Age years @pet.Purpose" />
            <div class="card-body">
                <h5 class="text-center">
                    @pet.Breed @pet.Gender @pet.Age years @pet.Purpose
                </h5>
                <a asp-controller="Dog"
                   asp-action="AllDogs"
                   asp-route-id="@pet.Picture">
                   See More
                </a>
            </div>
        </div>
    </div>      
    }
</div>
