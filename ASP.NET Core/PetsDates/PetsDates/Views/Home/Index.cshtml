@model IndexViewModel


<div>
    <h2 class="center">Find the best match for your best friend !</h2>
</div>
   
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner offset-1 col-10">
        @for (int i = 0; i < Model.Pets.Count(); i++)
        {
            var pet = Model.Pets[i];
<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
    <img class="d-block w-100" src="@pet.Picture" alt="@pet.Breed @pet.Age">
    <div class="carousel-caption d-none d-md-block">
        <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@pet.Id">@pet.Breed @pet.Age</a></h5>
    </div>
</div>}
    </div>
    <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next float-left" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>