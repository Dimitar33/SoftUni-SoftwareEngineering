
@model CourseViewModel

<div class="container">
    <div class="row">
        <div class="offset-3 col-6">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" type="text" placeholder="Course name here…">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Dificulty"></label>
                    <input asp-for="Dificulty" class="form-control" type="number" placeholder="Pet's age here…">
                    <span asp-validation-for="Dificulty" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descriotion"></label>
                    <textarea asp-for="Descriotion" class="form-control" rows="3"></textarea>
                </div>

                <br><br>
                <input type="submit" value="Submit">
            </form>

        </div>
    </div>
</div>