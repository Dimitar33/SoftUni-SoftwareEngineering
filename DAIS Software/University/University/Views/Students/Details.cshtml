@model UserViewModel

<div class="row">
    <div class="col-md-auto">
        <h4>First Name <span class="font-weight-normal"> - @Model.FirstName</span> </h4>
        <h4>Last Name <span class="font-weight-normal"> - @Model.LastName</span> </h4>
        <h4>Age <span class="font-weight-normal"> - @Model.Age</span> </h4>
        <h4>Courses <span class="font-weight-normal"> - @string.Join(", ",Model.Courses.Select(x => x.Name))</span> </h4>
        <h4>Email <span class="font-weight-normal"> - @Model.Email</span> </h4>
        <h4>Phone <span class="font-weight-normal"> - @Model.Phone</span> </h4>
    </div>
    <div>
        <a asp-controller="Students" asp-action="ChoseCourse" asp-route-id="@Model.Id">Chouse Course</a>
        <a class="remove" asp-controller="Students" asp-action="StudentCourses" asp-route-id="@Model.Id">Student Courses</a>
    </div>
</div>


<style>
    a {
        margin: 5px;
    }
</style>