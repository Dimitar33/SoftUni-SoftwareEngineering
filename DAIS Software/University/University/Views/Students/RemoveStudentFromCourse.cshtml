
<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                       @course.Name @course.Descriotion @course.CourseModules @course.Dificulty @course.StudentsCount
                    </h5>

                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">Details</a>
                    <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="text-danger" onclick="return confirm('Confirm Delete')">Delete</a>
                   
                </div>
                <div>
                     <a asp-controller="Students" asp-action="AsignStudentToCourse" asp-route-studentId="@ViewBag.studentId" asp-route-courseId="@course.Id" onclick="return confirm('Confirm Asign')">Asign</a>
                </div>
            </div>
        </div>
    }
</div>