@model QuestionViewModel


<div class="container">
    <div class="row">
        <div class="offset-3 col-6">
            <form method="post">

                <div>
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placegolder="Description"></textarea>
                </div>
                <br />
                
                    <div>
                        <label asp-for="Answers[0].Answear"></label>
                        <textarea asp-for="Answers[0].Answear" class="form-control" rows="2" placegolder="Answer"></textarea>
                    </div>

                    <div>
                        <label asp-for="Answers[0].IsCorrect"></label>
                        <input asp-for="Answers[0].IsCorrect" type="checkbox">
                    </div>
                
                     <div>
                        <label asp-for="Answers[1].Answear"></label>
                        <textarea asp-for="Answers[1].Answear" class="form-control" rows="2" placegolder="Answer"></textarea>
                    </div>

                    <div>
                        <label asp-for="Answers[1].IsCorrect"></label>
                        <input asp-for="Answers[1].IsCorrect" type="checkbox">
                    </div>
                     <div>
                        <label asp-for="Answers[2].Answear"></label>
                        <textarea asp-for="Answers[2].Answear" class="form-control" rows="2" placegolder="Answer"></textarea>
                    </div>

                    <div>
                        <label asp-for="Answers[2].IsCorrect"></label>
                        <input asp-for="Answers[2].IsCorrect" type="checkbox">
                    </div>
                     <div>
                        <label asp-for="Answers[3].Answear"></label>
                        <textarea asp-for="Answers[3].Answear" class="form-control" rows="2" placegolder="Answer"></textarea>
                    </div>

                    <div>
                        <label asp-for="Answers[3].IsCorrect"></label>
                        <input asp-for="Answers[3].IsCorrect" type="checkbox">
                    </div>

                <br><br>
                <input type="submit" style="background-color:greenyellow" value="Add">
            </form>

        </div>
    </div>
</div>