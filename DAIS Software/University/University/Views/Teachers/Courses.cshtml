@model List<CourseViewModel>;

<header>
    <h1>Courses</h1>


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="CreateCourse" asp-route-id="@ViewBag.teacherId">Create Course</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                        <h4>Course <span class="font-weight-normal"> - @course.Name</span> </h4>
                        <h4>Dificulty <span class="font-weight-normal"> - @course.Dificulty</span> </h4>
                        <h4>StudentsCount <span class="font-weight-normal"> - @course.StudentsCount</span> </h4>
                    </h5>

                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">Details</a>
                    <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                    <a class="remove" asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="text-danger" onclick="return confirm('Confirm Delete')">Delete</a>

                </div>
            </div>
        </div>
    }
</div>

<style>
    h1 {
        color: burlywood;
        text-align: center;
    }

    .card-body a {
        margin: 5px;
        background-color:aqua;
        padding: 5px;
        text-decoration:none;
    }
</style>