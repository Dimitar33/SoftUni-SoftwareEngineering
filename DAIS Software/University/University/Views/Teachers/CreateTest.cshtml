@model TestViewModel

<div class="container">
    <div class="row">
        <div class="offset-3 col-6">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Duration"></label>
                    <input asp-for="Duration" class="form-control" type="number" placeholder="Duration here…">
                    <span asp-validation-for="Duration" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" class="form-control" type="date" value="@DateTime.Now" placeholder="StartDate here…">
                    <span asp-validation-for="StartDate" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <input asp-for="EndDate" class="form-control" type="date" value="@DateTime.Now" placeholder="StartDate here…">
                    <span asp-validation-for="EndDate" class="small text-danger"></span>
                </div>

               


                <br><br>
                <input type="submit" value="Submit">
            </form>

        </div>
    </div>
</div>