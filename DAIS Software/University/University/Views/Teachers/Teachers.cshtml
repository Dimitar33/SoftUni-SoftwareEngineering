@model List<UserViewModel>;

<header>
    <h1>Teachers</h1>
   
</header>

<div class="row">
    @foreach (var teacher in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-text">
                        <h4>Name <span class="font-weight-normal"> - @teacher.FirstName @teacher.LastName</span> </h4>
                        <h4>Age <span class="font-weight-normal"> - @teacher.Age</span> </h4>
                        <h4>Roles <span class="font-weight-normal"> - @teacher.Role</span> </h4>
                    </h5>

                    <a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id">Details</a>
                   
                </div>
            </div>
        </div>
    }
</div>

<style>
    h1 {
        color:blue;
        text-align: center;
    }
    .card-body a {
        margin: 5px;
        background-color:aqua;
        padding: 5px;
        text-decoration:none;
    }
</style>